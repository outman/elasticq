{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "store:allow-load",
    "store:allow-save",
    "store:allow-get",
    "store:allow-set",
    "store:allow-delete",
    "store:allow-keys",
    "store:allow-values",
    "store:allow-entries",
    "store:allow-clear",
    {
      "identifier": "http:allow-fetch",
      "allow": [
        { "url": "http://*" },
        { "url": "http://*:*" },
        { "url": "https://*" },
        { "url": "https://*:*" }
      ]
    },
    {
      "identifier": "http:allow-fetch-cancel",
      "allow": [
        { "url": "http://*" },
        { "url": "http://*:*" },
        { "url": "https://*" },
        { "url": "https://*:*" }
      ]
    },
    {
      "identifier": "http:allow-fetch-read-body",
      "allow": [
        { "url": "http://*" },
        { "url": "http://*:*" },
        { "url": "https://*" },
        { "url": "https://*:*" }
      ]
    },
    {
      "identifier": "http:allow-fetch-send",
      "allow": [
        { "url": "http://*" },
        { "url": "http://*:*" },
        { "url": "https://*" },
        { "url": "https://*:*" }
      ]
    }
  ]
}
